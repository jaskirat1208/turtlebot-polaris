#! /usr/bin/env python
import rospy
from turtlesim.msg import Pose

from polaris_follower.controller import Controller
from polaris_follower.objects.turtle import Turtle


def main():
    rospy.init_node('Controller')

    # Initialize and spawn the turtles
    src = Turtle('turtle2')
    pose = Pose(1, 1, 90, 0, 0)
    src.spawn(pose)
    dest = Turtle('turtle1')

    # Initialize the controller
    controller = Controller(src, dest)
    controller.simulate()


if __name__ == '__main__':
    main()
