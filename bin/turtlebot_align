#! /usr/bin/env python
import rospy

from polaris_follower.controllers.alignment_controller import AlignmentController
from polaris_follower.robots.turtlebot import Turtlebot


def main():
    rospy.init_node('Controller')

    # Initialize and spawn the turtles
    src = Turtlebot('tb3_0')
    dest = Turtlebot('tb3_1')

    # Initialize the controller
    controller = AlignmentController(src, dest)
    controller.simulate()


if __name__ == '__main__':
    main()
